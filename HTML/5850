  <script>
   function validateForm() {
    var x = document.forms["onedrive"]["email"].value;
    var atpos = x.indexOf("@");
    var dotpos = x.lastIndexOf(".");
    if (atpos&lt;1 || dotpos&lt;atpos+2 || dotpos+2&gt;=x.length) {
        alert("Enter a valid email address");
        return false;
    }
}
  </script>
