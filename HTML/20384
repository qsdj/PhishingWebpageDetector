  <script type="text/javascript">
   function ver_servico(id){
      $("div").each(function(){
        if($(this).hasClass("servicos") &amp;&amp; this.id != id &amp;&amp; !$(this).hasClass("invisivel")){
          $(this).addClass('invisivel');
          $(this).hide('slow');
        }
      });
  
      if(!$("#"+id).hasClass("invisivel")){
        $("#"+id).addClass('invisivel');
        $("#"+id).hide('slow');
      }
      else {
        $("#"+id).show('slow').removeClass("invisivel");
      }
    }
  </script>
