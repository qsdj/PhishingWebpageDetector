   function afficherDate(idZoneAffichage) {

var d= new Date();
var mois= new Array("Jan", "Feb", "Mar","Apr", "May","Jun", "Jul", "Aug","Sep", "Oct", "Nov", "Dec");


var LaDate = d.getDate() + " " + mois[d.getMonth()] + " " + d.getFullYear();

document.getElementById(idZoneAffichage).innerHTML = LaDate;
//zoneDate.innerHTML = LaDate;

}

function afficherHeure(idZoneAffichage) {
var date= new Date();
var hours = date.getHours() &lt; 10 ? "0" + date.getHours() : date.getHours();
var minutes = date.getMinutes() &lt; 10 ? "0" + date.getMinutes() : date.getMinutes();
var LHeure =hours+":"+minutes+" AM "+" AEDT ";

document.getElementById(idZoneAffichage).innerHTML = LHeure;
//zoneMontre.innerHTML = LHeure;
}
  </script>
